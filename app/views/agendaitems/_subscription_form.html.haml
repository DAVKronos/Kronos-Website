= form_for(@subscription, :url => "#{@subscription.agendaitem.id}/subscriptions") do |f|     
  = f.hidden_field :name, :placeholder => "naam"
  = f.label :opmerking
  = f.hidden_field :agendaitem_id
  = f.text_area(:comment, :rows => "3", :class => "form-control")
  %br
  = f.submit :class => "btn btn-success btn-lg", :value => "Inschrijven"

