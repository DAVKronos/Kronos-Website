%h1
  =@agendaitem.name
%br
- show_to :admin do
  .row
    = link_to('Bewerken', edit_agendaitem_path(@agendaitem))
    |
    = link_to('Verwijderen', @agendaitem, confirm: 'Weet je zeker dat je dit agendaitem wilt verwijderen?', method: :delete)
.row
  .span6
    .row
      %h2 Informatie
    .row
      .span5
        .row
          %hr{:class => "no-margin"}
    .row
      Type:
      = if @agendaitem.intern; 'Kronos ' else 'Externe ' end
      = @agendaitem.category
    .row
      Datum:
      = @agendaitem.date.strftime("%d %B %H:%M")
    .row
      Locatie:
      = @agendaitem.location
    .row
      Organiserende commissie:
      = if @agendaitem.commission; link_to @agendaitem.commission.name, @agendaitem.commission end
    .row
      %p
        = simple_format(@agendaitem.description)
    .row
      .span5
        .row
          %hr
  .span6
    .row
      %h2 Programma
    .row
      .span5
        .row
          %hr{:class => "no-margin"}
    - @agendaitem.events.each do |event|
      .row
        Dit is een event
    - show_to :admin do
      .row
        = link_to('Programma aanpassen', '/agendaitems/' + @agendaitem.id.to_s + '/addevents')
    .row
      .span5
        .row
          %hr
  - if @agendaitem.subscribe
    .span6
      .row
        %h2 Inschrijflijst
      .row
        .span5
          .row
            %hr{:class => "no-margin"}
      - if current_user
        .row
          .span5
            - @agendaitem.subscriptions.each do |subscription|
              .row
                .span4
                  .row
                    = subscription.name + ' - ' + subscription.comment
                - show_to :admin do
                  .span1
                    .row
                      = link_to 'Uitschrijven', subscription, confirm: 'Weet je het zeker dat je deze persoon wilt uitschrijven?', method: :delete
      - else
        .row
          Je moet inloggen om deze lijst te kunnen zien.
      - show_to :admin do
        .row
          .span5
            .row
              = link_to 'Inschrijvingen aanpassen', '/'
      .row
        .span5
          .row
            %hr
  .span6
    .row
      %h2 Inschrijven
    .row
      .span5
        .row
          %hr{:class => "no-margin"}
    - if @agendaitem.subscribe
      - if ((@agendaitem.subscriptiondeadline - Time.now) > 0)
        .row
          %i{:class => "icon-ok-sign"}
          = h distance_of_time_in_words(@agendaitem.subscriptiondeadline, Time.now)
        - if current_user
          - subscription = (current_user.subscriptions | @agendaitem.subscriptions)
          - if subscription.empty?
            .row
              = render 'subscription_form'
          - else
            .row
              Je hebt je al ingeschreven.
              = link_to 'Uitschrijven', subscription.first, confirm: 'Weet je het zeker dat je je wilt uitschrijven?', method: :delete
        - else
          .row
            Je moet inloggen om je te kunnen inschrijven.
      - else
        .row
          %i{:class => "icon-ok-sign"}
          Gesloten
        .row
          Je kunt je niet meer in- of uitschrijven.
    - else
      .row
        %i{:class => "icon-remove-sign"}
        Er is geen inschrijving
    .row
      .span5
        .row
          %hr