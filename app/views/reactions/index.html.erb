<h1>Listing reactions</h1>

<table>
  <tr>
    <th>Reaction</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reactions.each do |reaction| %>
  <tr>
    <td><%= reaction.reactiontext %></td>
    <td><%= link_to 'Show', reaction %></td>
    <td><%= link_to 'Edit', edit_reaction_path(reaction) %></td>
    <td><%= link_to 'Destroy', reaction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

