%h1 Nieuw lid van een commissie

= form_for(@commission_membership) do |f|
  = render 'shared/error_messages', :object => f.object  
  - options_from_collection_for_select(User.all, :id, :name)
  = collection_select(:commission_membership, :user_id, User.all, :id, :name)
  - options_from_collection_for_select(Commission.all, :id, :name)
  = collection_select(:commission_membership, :commission_id, Commission.all, :id, :name)
  #field 
  = f.label :function
  %br
  = f.text_field :function

  #actions

  = f.submit :toevoegen