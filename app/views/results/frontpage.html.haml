.row
  .col-md-12
    %h1 
      =t('.results').capitalize
      %small overzicht
.row
  .col-md-12
    %ul.nav.nav-tabs
      - @present.take(2).reverse.each do |d|
        %li{:role => 'presentatino'}= link_to (l d, format: '%b %Y'), result_frontpage_month_path(d.strftime('%Y'), d.strftime('%m'))
      %li.active{:role => 'presentation'}= link_to (l @current, format: '%b %Y'), '#'
      - @past.reverse.take(2).each do |d|
        %li{:role => 'presentation'}= link_to (l d, format: '%b %Y'), result_frontpage_month_path(d.strftime('%Y'), d.strftime('%m'))
      %li.dropdown{:role => "presentation"}
        %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          = l(@current, :format => '%b')
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          - t(:month_names, :scope => :date).drop(1).each_with_index do |m, ind|
            %li= link_to m, result_frontpage_month_path(@current.strftime('%Y'), (ind+1).to_s.rjust(2, '0'))
      %li.dropdown{:role => "presentation"}
        %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
          = @current.strftime('%Y')
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          - @years.reverse.each do |y|
            %li= link_to y, result_frontpage_month_path(y, @current.strftime('%m'));
      %li{:role => 'presentation'}= link_to 'Clubrecords', result_frontpage_records_path
.row
  &nbsp;
.row
  .col-md-12
    #laatste.panel-group.list-group
      - @agendaitems.each_with_index do |agendaitem, ntime|
        .panel.list-group-item
          .list-group-heading
            %a.accordion-toggle.collapsed{"data-parent" => "#laatste", "data-toggle" => "collapse", :href => "#laatste-collapse-"+ntime.to_s}
              .row
                .col-xs-1
                  %h4
                    = agendaitem.date.strftime('%d') 
                    = content_tag(:small, agendaitem.date.strftime('%a'))
                .col-xs-10
                  %h4
                    = agendaitem.name
                    = content_tag :small, (agendaitem.agendaitemtype.name if agendaitem.agendaitemtype)
                .col-xs-1.text-right
                  %h4
                    %small
                      .icon
          %div{:id=>'laatste-collapse-'+ntime.to_s, :class => (ntime == 0)? 'collapse in' : 'collapse'}
            .panel-body
              -agendaitem.events.each do |event|
                .table-responsive
                  %table.table.table-condensed.table-striped
                    %thead
                      %tr
                        %th{:colspan=>'3'}
                          = event.eventtype.name if event.eventtype
                          = number_to_human event.distance, :units => :distance
                    %tbody
                      - event.results.order('place ASC').each do |result|
                        %tr
                          %td.row.col-xs-1
                            = result.result
                            = result.event.eventtype.measuringunit
                            - if result.place
                              = '(' + result.place.to_s + ')'
                          %td.col-xs-5
                            = result.username
                          %td.col-xs-6
                            = number_to_human result.calculatedResult, :format => "%n", :precision => 2, :significant => false
                            = result.event.eventtype.calculated_unit
            .row
              .col-xs-12.text-center
                = link_to 'evenementenpagina', agendaitem_path(agendaitem), :class=>'btn btn-primary'
