%header
  %div{:class => "navbar"}
    %div{:class => "navbar-inner"}
      %div{:class => "container"}
        <a class="brand" href="/">Kronos</a>
        %ul.nav
          %li
            = link_to "Home", home_path
          %li.dropdown
            <a href="#" class="dropdown-toggle"data-toggle="dropdown">
            Account
            <b class="caret"></b>
            </a>
            %ul.dropdown-menu
              %li
                = link_to "Overzicht", home_path
              %li
                = link_to "Nieuws", newsitems_path
          %li
            = link_to "Agenda", agendaitems_path
          %li
            = link_to "Uitslagen", results_path
          %li
            = link_to "Foto's", photoalbums_path
          %li
            = link_to "Chatbox", chatmessages_path
          - if !current_user
            %li
              = link_to "Log in", signin_path
          - else
            %li
              = link_to current_user.name.split[0] + "'s stek", current_user
            %li
              = link_to "Leden", users_path
            - show_to :admin do
              %li
                = link_to "Beheer", admin_path
            %li
              = link_to "Log uit", signout_path, :method => :delete