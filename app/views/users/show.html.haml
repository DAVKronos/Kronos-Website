%ul{:class =>"user"}
  %section.polaroid
    %figure
      = image_tag @user.avatar.url(:medium)
      %figcaption
        = @user.name
  %li
    = t(:name).capitalize + ": " + @user.name
  %li
    = t(:initials).capitalize + ": " + @user.initials
    %br
  %li
    = t(:birthdate).capitalize + ": " + @user.birthdate.to_s
    %br
  %li
    = t(:email).capitalize + ": " + @user.email
    %br
  %li
    = t(:usertype).capitalize + ": "
    = @user.user_type.name if @user.user_type
  %li
    = t(:phonenumber).capitalize + ": "
    = @user.phonenumber
    %br
  %li
    = t(:address).capitalize + ": "
    = @user.address
    %br
  %li
    = t(:postalcode).capitalize + ": "
    = @user.postalcode
    %br
  %li
    = t(:city).capitalize + ": "
    = @user.city
    %br
  %li
    = t(:sex).capitalize + ": "
    = @user.sex
    %br
  %li
    = t(:licensenumber).capitalize + ": "
    = @user.licensenumber
    %br
  %li
    = t(:xtracardnumber).capitalize + ": "
    = @user.xtracard
  %li
    = t(:papieren_kronometer).capitalize + ": "
    = @user.papieren_kronometer.to_s
  -if current_user.admin?
    %li
      = t(:bankaccountnumber).capitalize + ": "
      @user.bank_account_number
    %li
      = t(:iban).capitalize + ": "
      @user.iban

- if can? :update, @user
  = link_to 'pas je gegevens aan', edit_user_path(@user)
  %br
  = link_to 'verander je wachtwoord', editpassword_user_path
  