.row
  .col-lg-12
    %h1.push-down-for-logo= t(:edit).capitalize

.row
  .col-lg-12
    = form_for @user, :validate => true, :html => { :multipart => true} do |f|
      -if current_user.admin?
        = render 'admin_fields', :f => f
      -else
        = render 'fields', :f => f


      #actions
        =f.submit :update, :class => "btn btn-success"