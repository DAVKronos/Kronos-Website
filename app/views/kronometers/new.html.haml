%h1 Nieuwe Kronometer

= form_for @km do |f|
    
  = f.label :name
  = f.text_field :name
    
  = f.label :date
  = f.text_field :date, {:placeholder => "Datum", :class => "datumprikker"}
    
  = f.label :file
  = f.file_field :file

  = f.label "Folder name"
  = f.collection_select(:folder_id, @folders, :id, :name, {:include_blank => "Main folder"}, {:class => "form-control"}) 
  = f.submit