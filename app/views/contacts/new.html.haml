= form_for @contact, :html => {:class => 'col-xs-8' } do |f|

  %h3
    =t(:sendmessage).capitalize

  .form-group
    = f.label :name
    = f.text_field :name, :class => 'form-control', :required => true
  .form-group
    = f.label :email
    = f.email_field :email, :class => 'form-control', :required => true
  .form-group
    = f.label :message
    = f.text_area :message, :class => 'form-control', :as => :text, :required => true
  .hidden
    = f.label :nickname, :hint => 'Leave this field blank!'
  %br
  = f.button t(:send).capitalize, :class=> 'btn btn-primary'


