/* Sticky Footer 
 * see example used:
 * http://getbootstrap.com/examples/sticky-footer-navbar/ 
 * */
html {
  position: relative;
  min-height: 100%;
}

body{
  margin-bottom: 120px;
}

/* added bottom padding of all immidiate container childs of body */

body > .container {
  padding-bottom: 120px;
}

footer.app{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 120px;
  margin: 0;
  padding: 0;
}

footer.app .container{
  background-color:$brand-primary;
  color: #fff;
}

footer.app .container a{
  color: #fff;
}

// end sticky footer

// header 

header.app{
  margin: 0;
  padding: 0;
}
header.app .container{
  background-color:$brand-primary;
}
header.app .logo-top{
  background-position: center;
  background-repeat: no-repeat;
  display: block;
}

header.app .logo-top.visible-lg-block{
  background-image:url(<%=asset_path "logo-lg.png"%>);
  height: 150px;
}

header.app .logo-top.visible-md-block{
  background-image:url(<%=asset_path "logo-md.png"%>);
  height: 90px;
}

header.app .logo-top.visible-sm-block{
  background-image:url(<%=asset_path "logo-md.png"%>);
  height: 80px;
}

header.app .navbar-default .container{
  background-color:$brand-primary;
}

header .highlighting {
  background-color:$brand-secondary;
}

article header {
  word-break: break-word;
}

// Banner 

.announcement{
  background-size:cover
}

.announcement p>span{
  // background-color: rgba(10,10,10,0.4);
  color: #fff;
  padding: 7px;
  text-shadow: 0px 0px 10px rgba(0, 0, 0, 0.9);
}
.announcement h1 {
  // background-color: rgba(10,10,10,0.4);
  color: #fff;
  padding: 10px;
  text-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
}
.announcement form{
  display: inline;
}

.announcement form div{
display: inline;
}

.announcement .hide-banner{
  text-align: right;
  float: right;
  font-size: 25px;
  font-weight: bold;
  line-height: 18px;
  color: #000000;
  text-shadow: 0 1px 0 #ffffff;
  opacity: 0.6;
  filter: alpha(opacity=60);
  text-decoration: none;
}

.announcement .hide-banner:hover {
  color: #841b2d;
  text-decoration: none;
  opacity: 0.8;
  filter: alpha(opacity=80);
  cursor: pointer;
}

.list-group-heading .accordion-toggle .icon:after {
  /* symbol for "opening" panels */
  font-family: 'Glyphicons Halflings';  /* essential for enabling glyphicon */
  content: "\e113";    /* adjust as needed, taken from bootstrap.css */
}
.list-group-heading .accordion-toggle.collapsed .icon:after {
  /* symbol for "collapsed" panels */
  content: "\e114";    /* adjust as needed, taken from bootstrap.css */
}

// Sponsor images

.sponsor-white {
  background-color: white;
  padding-bottom: 15px;
}

.sponsor-text {
  color : $dark-green;
  font-size: 25px;
  font-weight: bold;
  line-height: 18px;
  text-align: center;
  vertical-align: middle;
  line-height: 60px;

}

.commission-member {
  display: flex;
  align-items: center;
  margin-bottom: 20px;

  &.reverse {
    flex-direction: row-reverse;

    .member-name {
      text-align: right;
    }

    .member-avatar {
      display: flex;
      justify-content: flex-end;
    }
  }
}

.member-avatar {
  flex: 0 0 300px;
}

.member-name {
  flex: 1 1 auto;
}

